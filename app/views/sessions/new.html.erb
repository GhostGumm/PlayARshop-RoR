<% provide(:title, "Sign in") %>

<%= stylesheet_link_tag("normalize") %>
<%= stylesheet_link_tag("foundation.min") %>
<%= stylesheet_link_tag("style.css") %>
<%= stylesheet_link_tag("ie") %>
<%= stylesheet_link_tag("http://fonts.googleapis.com/css?family=Noto+Sans:400,700", type:'text/css') %>
<%= stylesheet_link_tag("http://fonts.googleapis.com/css?family=Cabin+Condensed:600", type:'text/css') %>

<%= javascript_include_tag("vendor/custom.modernizr") %>


<h1 style="color: black">Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>