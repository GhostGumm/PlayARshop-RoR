<% provide(:title, @user.name) %>
<%= stylesheet_link_tag("normalize") %>
<%= stylesheet_link_tag("foundation.min") %>
<%= stylesheet_link_tag("style.css") %>
<%= stylesheet_link_tag("ie") %>
<%= stylesheet_link_tag("http://fonts.googleapis.com/css?family=Noto+Sans:400,700", type:'text/css') %>
<%= stylesheet_link_tag("http://fonts.googleapis.com/css?family=Cabin+Condensed:600", type:'text/css') %>

<%= javascript_include_tag("vendor/custom.modernizr") %>

<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= image_tag @user.logo.url(:medium) %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
  <div>
</div>

    </div>
<%= link_to "Games !", games_path(:id=>@user.id), class: "btn btn-large btn-primary" %>