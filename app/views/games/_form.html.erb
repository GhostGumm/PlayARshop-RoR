<%= javascript_include_tag :defaults%>
<%= javascript_include_tag 'jquery-1.4.2.min.js', 'application'%>

<%= form_for(@game, :html => {:multipart => true}) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<form>
  <div class="form-group">
      <div class="field" style="display: none" >
        <%= f.label :user_id %><br>
        <%= f.text_field :user_id, :value => @user.id %>
      </div>

    <div class="field" style="display: none" >
      <%= f.text_field :gameId, :value => @gameIHD %>
    </div>

    <div class="field" style="display: none" >
      <%= f.text_field :token, :value => "StarWars" %>
    </div>


    <div class="form-group">
      <%= f.label "Please give us a reduction rate" %>
      <%= f.number_field :reducRate, {in: 0...100}  %>
    </div>

    <div class="form-group">

      <%= f.label "Please give us a reduction Frequence" %>
      <%= f.number_field :reducFreq, {in: 0...100} %>
    </div>

    <div class="form-group">
      <%= f.label "Please give us a reduction name" %>
      <%= f.text_field :reducName %>
    </div>

    <div class="form-group">
      <%= f.label "Please choose a color scheme" %>
      <%= f.select :color, ['Camouflage militaire'], :selected => 'Camouglage militaire' %>
    </div>

    <div>
      <%= f.label "Choose a level difficulty" %>
      <%= f.select :level, ['1', '2', '3'], :selected =>'1' %>
    </div>

      <div class="form-group">
        <label for="image">Please provide us a snapshot of your shop showcase</label>
        <%= f.file_field :image %>
      </div>

    <div class="form-group">
      <label for="image">Please provide a logo</label>
      <%= f.file_field :logo %>
    </div>

    </div>
  <%= f.submit "Create my game", class: "btn btn-success" %>

</form>
<% end %>
